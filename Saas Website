<script>
function toggleTheme(){
  document.body.classList.toggle("dark");
  localStorage.setItem("theme",document.body.classList.contains("dark"));
}
if(localStorage.getItem("theme")=="true"){document.body.classList.add("dark");}

function toggleFaq(el){
  let a = el.nextElementSibling;
  a.style.display = a.style.display==="block"?"none":"block";
}
</script>

<!-- CART MODAL -->
<div id="cartModal" style="display:none;position:fixed;top:0;left:0;width:100%;height:100%;background:rgba(0,0,0,0.6);justify-content:center;align-items:center;z-index:1000;">
  <div style="background:var(--card);padding:30px;border-radius:20px;width:350px;position:relative;">
    <span onclick="closeCart()" style="position:absolute;top:10px;right:15px;cursor:pointer;font-weight:bold;">&times;</span>
    <h3>Your Cart</h3>
    <div id="cartItems" style="margin-top:15px;"></div>
    <p>Total: $<span id="cartTotal">0</span></p>
    <button class="btn" onclick="checkout()">Checkout</button>
  </div>
</div>

<!-- AI CHATBOT BUTTON -->
<button id="chatBtn" style="position:fixed;bottom:20px;right:20px;border:none;background:#2563eb;color:white;padding:15px;border-radius:50%;cursor:pointer;z-index:1000;">üí¨</button>

<!-- AI CHATBOT MODAL -->
<div id="chatModal" style="display:none;position:fixed;bottom:70px;right:20px;width:300px;height:400px;background:var(--card);border-radius:20px;padding:15px;box-shadow:0 5px 15px rgba(0,0,0,0.3);z-index:1000;display:flex;flex-direction:column;">
  <div style="flex:1;overflow-y:auto;" id="chatContent"></div>
  <input type="text" id="chatInput" placeholder="Ask AI..." style="padding:10px;border-radius:10px;border:1px solid #ccc;margin-top:10px;" />
  <button class="btn" style="margin-top:5px;" onclick="sendMessage()">Send</button>
</div>

<script>
// ----------------- CART FUNCTIONALITY -----------------
let cart = [];

function addToCart(name, price) {
  cart.push({name, price});
  updateCart();
  document.getElementById('cartModal').style.display = 'flex';
}

function updateCart() {
  let cartItems = document.getElementById('cartItems');
  cartItems.innerHTML = '';
  let total = 0;
  cart.forEach(item=>{
    cartItems.innerHTML += `<p>${item.name} - $${item.price}</p>`;
    total += item.price;
  });
  document.getElementById('cartTotal').innerText = total;
}

function closeCart() { document.getElementById('cartModal').style.display = 'none'; }
function checkout() { alert("Checkout successful!"); cart=[]; updateCart(); closeCart(); }

// ----------------- AI CHATBOT FUNCTIONALITY -----------------
let chatBtn = document.getElementById('chatBtn');
let chatModal = document.getElementById('chatModal');
let chatContent = document.getElementById('chatContent');

chatBtn.onclick = ()=>{ chatModal.style.display = chatModal.style.display==='flex'?'none':'flex'; }
function sendMessage(){
  let input = document.getElementById('chatInput');
  let msg = input.value.trim();
  if(!msg) return;
  chatContent.innerHTML += `<p><b>You:</b> ${msg}</p>`;
  
  // Simple AI simulated responses
  let response = "Sorry, I can't answer that. Try asking about products, pricing, or support.";
  msg = msg.toLowerCase();
  if(msg.includes("price")) response = "Our product prices are displayed in the Products section.";
  else if(msg.includes("ai assistant")) response = "AI Assistant is available at $19/month.";
  else if(msg.includes("support")) response = "24/7 support is available for all plans.";
  else if(msg.includes("buy")) response = "Click the 'Buy Now' button on the product you want to purchase.";
  
  chatContent.innerHTML += `<p><b>AI:</b> ${response}</p>`;
  chatContent.scrollTop = chatContent.scrollHeight;
  input.value='';
}

// ----------------- UPDATE EXISTING BUY NOW BUTTONS -----------------
document.querySelectorAll('.card .btn').forEach((btn,i)=>{
  btn.onclick = ()=>{
    let productCard = btn.parentElement;
    let name = productCard.querySelector('h3').innerText;
    let priceText = productCard.querySelector('p').innerText.replace('$','').replace(' / month','');
    let price = parseInt(priceText);
    addToCart(name, price);
  }
});
</script>

